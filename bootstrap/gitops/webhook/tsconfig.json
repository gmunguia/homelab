{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2023"],
    "module": "Node16",
    "moduleResolution": "node16",
    "noEmit": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": false,
    "types": ["@types/node"]
  },
  "exclude": ["node_modules"],
  "include": ["**/*"]
}
